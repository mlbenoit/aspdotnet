@model CreateUserRequest
@{
    ViewData["Title"] = "Create User Account";
}

<div class="row">
    <div class="col-4 offset-4 border border-light py-5">
        <form asp-route="Users-Add" method="post">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
            </div>

            <div class="form-group">
                <label asp-for="MiddleName">Middle Name</label>
                <input type="text" class="form-control" asp-for="MiddleName" placeholder="Middle Name">
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Street Name and Number">
            </div>

            <div class="form-group">
                <label asp-for="City">City</label>
                <input type="text" class="form-control" asp-for="City" placeholder="City">
            </div>

            <div class="form-group">
                <label asp-for="ZipCode">ZipCode</label>
                <input type="text" class="form-control" asp-for="ZipCode" placeholder="Zip Code">
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth">Date of Birth</label>
                <input type="datetime" class="form-control" asp-for="DateOfBirth" placeholder="Date of Birth">
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <input type="text" class="form-control" asp-for="Gender" placeholder="Gender">
            </div>

            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
    </div>
</div>

